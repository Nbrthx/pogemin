  <script type="text/javascript">
    var table = document.getElementById("table");

    function tables(){
      var data = <%- data %>;
      var text = "";
      
      text += "<table style='border-collapse: collapse;'>";
      if(data.command == "SELECT"){
        text += "<tr>";
        for(let th in data.rows[0]){
          text += "<th style='border: 1px solid #000;'>"+th+"</th>";
        }
        text += "</tr>";
        for(let row of data.rows){
          text += "<tr>";
          for(let dt in row){
            text += "<td style='border: 1px solid #000;'>"+row[dt]+"</td>";
          }
          text += "</tr>";
        }
      }
      text += "</table>";
      table.innerHTML = text;
    }
    tables();
  </script>
</body>
